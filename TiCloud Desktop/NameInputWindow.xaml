<Window x:Class="TiCloud.NameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiCloud"
        mc:Ignorable="d"
        Title="NameInputWindow" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="NameTextBox" VerticalAlignment="Top" Margin="10,62,2,0" Height="30"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Height="30" Margin="112,134,0,0" Click="OkButton_Click"/>
    </Grid>
</Window>
