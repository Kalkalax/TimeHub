<UserControl x:Class="TiCloud_Desktop.views.controls.UpdateTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:models="clr-namespace:TiCloud.Core.Database.Models" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiCloud_Desktop.views.models"
             xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             Height="72" Width="380">
    <Grid>


        <Border Background="#FFFEFEFE" 
                CornerRadius="15,15,15,15">

        </Border>


        <Button Style="{DynamicResource UpdateTileButton.xaml}" 
                Click="Button_Click" 
                Background="#00808080" BorderBrush="#00707070" Foreground="#00000000" BorderThickness="0,0,0,0"/>

        <Border Margin="10,10,315,10"
                Background="#FF0D0D0D" 
                CornerRadius="7,7,7,7">

            <svg:SvgViewbox Source="/resources/images/gift_icon.svg" Width="34" Height="34" />

        </Border>

        <TextBlock 
            Margin="95,18,215,36" 
            Text="2.0.0" 
            Width="70" 
            Foreground="#FF343435" FontSize="13"/>

        <TextBlock 
             Margin="75,36,5,14" 
             Foreground="#FF0D0D0D" FontSize="14"><Run Language="pl-pl" Text="First version of the application"/></TextBlock>

        <svg:SvgViewbox Source="/resources/images/version_icon.svg" Width="15" Height="15" Margin="75,21,290,36" RenderTransformOrigin="1.333,0.267" />



    </Grid>
</UserControl>
