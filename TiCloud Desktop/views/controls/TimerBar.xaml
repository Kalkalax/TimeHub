<UserControl x:Class="TiCloud_Desktop.views.controls.TimerBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiCloud_Desktop.views.controls" xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="31" Width="280">
    <Grid>



        <Button 
            x:Name="Reload_Timmer_Button" 
            Click="Reload_Timmer_Button_Click"
            Style="{DynamicResource TimerButton.xaml}"
            Width="31"
            Height="31"
            HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button.Content>
                <svg:SvgViewbox Source="/resources/images/reload_icon.svg" Width="19" Height="19" />
            </Button.Content>
        </Button>




        <Button 
            x:Name="StartStop_Timmer_Button" 
            Click="StartStop_Timmer_Button_Click"
            Style="{DynamicResource TimerButton.xaml}"
            Width="31"
            Height="31"
            HorizontalAlignment="Right" Margin="0,0,40,0">
            <Button.Content>
                <svg:SvgViewbox Source="/resources/images/play_icon.svg" Width="17" Height="17" />
            </Button.Content>
        </Button>

        <ComboBox 
            
            
            Width="200" 
            Height="31"
            HorizontalAlignment="Right" Margin="0,0,80,0"
        />



    </Grid>
</UserControl>
